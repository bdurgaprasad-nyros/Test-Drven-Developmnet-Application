
<!-- begin top /header-->

<div class="span-11 clear" style="margin-left:13px;;padding-top:15px; ">
 	<h3  class="profile_heading">Philosophy:</h3>
 	<hr class="blue_line" style="width:426px;" />	
</div>
<!-- end top /header-->


<!-- begin middle section-->
<%= form_for(@user, :url => {:controller=>'profile',:action=>'philosophy_update'}, :html => { :method => :put }) do |f| %>

  <% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <% if session[:omniauth].blank? %>
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this challenge from being saved:</h2>
      <% end %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



	<!-- row: religion-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Religion:</div>
	      <div class="span-7" >
	      <%= f.text_field :religion %>
	      </div>	
	 </div>


	<!-- row: religion description-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Description:</div>
	      <div class="span-7" >
	      	<%= f.text_area :religion_description ,:style=>"width:285px;height:50px",:class=>"zero_margin" %>
	      </div>	
	 </div>




	<!-- row: political view-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Political View:</div>
	      <div class="span-7" >
	      <%= f.text_field :political_view %>
	      </div>	
	 </div>


	<!-- row: polical view description-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Description:</div>
	      <div class="span-7" >
	      	<%= f.text_area :political_view_description ,:style=>"width:285px;height:50px",:class=>"zero_margin" %>
	      </div>	
	 </div>

	<% f.fields_for :user_additional_infos do |builder| %>

	<!-- row: inpsiration-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Inspired by:</div>
	      <div class="span-7" >
	      	<%= builder.text_field :inspired_by %>
	      </div>	
	 </div>
	<%end%>
	<!-- row: favorite quotes-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Favorite quotes:</div>
	      <div class="span-7" >
	         <%= f.text_area :favorite_quotes  ,:style=>"width:285px;height:50px",:class=>"zero_margin" %>
	      </div>	
	 </div>



	<hr class="space"/>
	<div class="float_right">
			 <%= f.submit ""%>
	</div>

 <% end %>
