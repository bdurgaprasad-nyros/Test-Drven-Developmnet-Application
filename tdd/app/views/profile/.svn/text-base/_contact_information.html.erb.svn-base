
<!-- begin top /header-->

<div class="span-11 clear" style="margin-left:13px;;padding-top:15px; ">
 	<h3  class="profile_heading">Contact Information:</h3>
 	<hr class="blue_line" style="width:426px;" />	
</div>
<!-- end top /header-->



<!-- begin middle section-->
<%= form_for(@user, :url => {:controller=>'profile',:action=>'contact_information_update'}, :html => { :method => :put }) do |f| %>
  <% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <% if session[:omniauth].blank? %>
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this challenge from being saved:</h2>
      <% end %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



	<!-- row:-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Email:
		  </div>
	      <div class="span-7" >
	      	 <%= @user.email %>
	      </div>	
	 </div>

	<!-- row:-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Street Address:
		  </div>
	      <div class="span-7" >
		      <%= f.text_field :street_address %>
	      </div>	
	 </div>
	<!-- row:-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	City:
		  </div>
	      <div class="span-7" >
		      <%= f.text_field :city %>
	      </div>	
	 </div>

	<!-- row:-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	State/province:</div>
	      <div class="span-7" >
		      <%= f.text_field :state %>
	      </div>	
	 </div>

	<!-- row:-->
	 <div class="span-11 clear">
	      <div class="span-3 form_label" >
		  	Zip/Postal Code:
	      </div>
	      <div class="span-7" >
		      <%= f.text_field :zip_code %>
	      </div>	
	 </div>

	<%= f.fields_for :contact_phone do |builder| %>
	  <div class="clearfix">
	    <div class="span-11 clear">
	      <div class="span-3 form_label">
		Phone number:
	      </div>
	      <div class="span-7" >
		<%= builder.text_field :phone_number %>
	      </div>	
	    </div>
	  </div>
	<%end%>	 

 	<%= f.fields_for :instant_messenger_account do |builder| %>
	  <div class="clearfix">
	    <div class="span-11 clear">
	      <div class="span-3 form_label" >
		Screen Name:
	      </div>
	      <div class="span-7" >
		<%= builder.text_field :screen_name ,:size => 20%>
		<%= builder.select :service_code ,{"Skype" => 1, "Gtalk" => 2, "Something Else" => 3}, {:include_blank => true} %>
	      </div>	
	    </div>
	  </div>
	<%end%>
	<hr class="space" />
	<div class="float_right">
			 <%= f.submit ""%>
	</div>
<%end%>	