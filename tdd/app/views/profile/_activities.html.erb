
<!-- begin top /header-->

<div class="span-11 clear" style="margin-left:13px;;padding-top:15px; ">
 	<h3  class="profile_heading">Sports and Activities:</h3>
 	<hr class="blue_line" style="width:426px;" />	
</div>
<!-- end top /header-->


<!-- begin middle section-->
<%= form_for(@user, :url => {:controller=>'profile',:action=>'activities_update'}, :html => { :method => :put }) do |f| %>

  <% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <% if session[:omniauth].blank? %>
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this challenge from being saved:</h2>
      <% end %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <%= f.fields_for :user_additional_info do |builder| %>


		<!-- row: sports-->
		 <div class="span-11 clear">
		      <div class="span-3 form_label" >
			  	Sports:
			  </div>
		      <div class="span-7" >
		      <%= builder.text_field :sports %>
		      </div>	
		 </div>

		<!-- row: favorite teams-->
		 <div class="span-11 clear">
		      <div class="span-3 form_label" >
			  	Favorite Teams:
			  </div>
		      <div class="span-7" >
		      <%= builder.text_field :teams %>
		      </div>	
		 </div>

		<!-- row: favorite athletes-->
		 <div class="span-11 clear">
		      <div class="span-3 form_label" >
			  	Favorite Athletes:
			  </div>
		      <div class="span-7" >
		      	<%= builder.text_field :athletes %>
		      </div>	
		 </div>


	
		<!-- row: favorite athletes-->
		 <div class="span-11 clear">
		      <div class="span-3 form_label" >
			  	Other Activities:
			  </div>
		      <div class="span-7" >
		      	<%= builder.text_field :other_activities %>
		      </div>	
		 </div>
	



	<%end%>


	<hr class="space"/>
	<div class="float_right">
			 <%= f.submit ""%>
	</div>

 <% end %>
