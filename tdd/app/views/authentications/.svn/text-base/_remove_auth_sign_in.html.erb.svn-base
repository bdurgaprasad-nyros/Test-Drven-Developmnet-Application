
<%= javascript_include_tag 'popupWindow' %>


<a href="/auth/twitter"
   title="twitter.com" class="auth_provider">
     <%= image_tag "twitter_32.png", :size => "32x32", :alt => "Twitter" %>
  Twitter
</a>

<a href="/auth/facebook" class="auth_provider">
  <%= image_tag "facebook_32.png", :size => "32x32", :alt => "Facebook" %>
  Facebook
</a>

<div class="clear"></div>

<%=render_javascript_block do %>
  var popup_window = $j('.auth_provider').popupWindow({
    height:500,
    width:900,
    top:50,
    left:50
  });

  if (window == parent) {
    window.close();
    window.opener.location = window.location.pathname
  }
<%end%>
